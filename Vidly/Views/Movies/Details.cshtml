@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Details</h2>
<table class="table">
    <tr>
        <th>Film</th><th>Genre</th><th>Release Date</th><th>Date Added</th><th>Number In Stock</th>
    </tr>
    <tr>
        <td>@Model.Name</td><td>@Model.Genre.Name</td><td>@Model.ReleaseDate</td><td>@Model.DateAdded</td><td>@Model.NumberInStock</td>
    </tr>
</table>







