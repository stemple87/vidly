@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if(@Model.Any())
{
<table class="table">
    <tr>
        <th>Movie</th>
    </tr>
    @foreach (var movie in Model)
    {

        <tr><td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td></tr>
    }
</table>
}
else
{
    <text>No Movie have been added yet!</text>
}
